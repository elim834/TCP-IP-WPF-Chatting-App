<Window x:Class="LastMessenger.PopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LastMessenger"
        mc:Ignorable="d"
        Title="Sign In" Height="450" Width="400">
    <Border Background="LightSkyBlue" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Sign In" FontSize="20" FontWeight="Bold" Foreground="DarkCyan" HorizontalAlignment="Center"/>
            <Label Content="Username:" Foreground="DarkCyan" KeyDown="MessagesTextBox_KeyDown" />
            <TextBox Name="UsernameTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkCyan"  Width="300" />
            <Label Content="Password:" Foreground="DarkCyan" />
            <TextBox Name="PasswordTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkCyan" Width="300" />
            <Button Content="Sign In" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Bisque" Click="SignIn_Click" Margin="0,10,0,0"/>
            <TextBlock Name="MessageTextBlock" Foreground="DarkCyan" Background="LightSkyBlue" />
            <Button Content="Sign Up" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Bisque" Click="SignUp_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>
