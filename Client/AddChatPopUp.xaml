<Window x:Class="LastMessenger.AddChatPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:LastMessenger"
        mc:Ignorable="d"
        Title="AddChatPopUp"  Height="200" Width="350">
       
        <StackPanel Margin="20">
            <TextBlock Text="Your UserId:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="CurrentUserUniqueIdText" VerticalAlignment="Center"/>
                <Button Content="Copy" Margin="10,0,0,0" Click="CopyUniqueId_Click" ></Button>
            </StackPanel>
        
            <TextBlock Text="Enter the unique id of the friend you want to chat:"/>
            <TextBox x:Name="UniqueIdInput" Margin="0,5,0,10"/>
        
            <Button Content="Add Friend" Click="StartChat_Click"/>
        </StackPanel>
    
</Window>
